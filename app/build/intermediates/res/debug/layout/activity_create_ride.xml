<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="rideshare.examples.android.ait.rideshare.CreateRide"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText android:hint="description" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/etdescrption" />

            <Spinner android:hint="Starting Location" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/startingLoc" />

            <Spinner android:hint="Destination" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/destination" />

            <DatePicker
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/startDate"
                android:calendarViewShown="false"
                />
            <TimePicker
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/timePicker"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/numSpaces"
                android:hint="Number of Spaces"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Submit"
                android:id="@+id/enterBtn"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/stupid"
                android:visibility="invisible"
                android:text=""/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/stupid2"
                android:visibility="invisible"
                android:text=""/>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
